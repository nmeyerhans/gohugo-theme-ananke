{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\" ?>" | safeHTML }}
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ if eq  .Title  .Site.Title }}{{ .Site.Title }}{{ else }}{{ .Site.Title }}{{ with .Title }} - {{.}}{{ end }}{{ end }}</title>
  <author>
    <name>{{ $.Site.Author.name }}</name>
    <email>{{ $.Site.Author.email }}</email>
  </author>
  <id>{{ .Permalink }}</id>
  <rights>Copyright Noah Meyerhans</rights>
  <updated>{{ .Date.Format "2006-01-02T15:04:05Z07:00" | safeHTML }}</updated>

  <link rel="alternate" type="text/html"
	hreflang="en" href="https://noah.meyerhans.us/"/>
  <link rel="self" type="application/atom+xml"
	href="https://noah.meyerhans.us/atom.xml"/>
  
  {{ range .Pages }}
  <entry>
    <author>
      <name>{{ $.Site.Author.name }}</name>
      <email>{{ $.Site.Author.email }}</email>
    </author>
    <title>{{ .Title }}</title>
    <link href="{{ .Permalink }}" />
    <updated>{{ .Date.Format "2006-01-02T15:04:05Z07:00" | safeHTML }}</updated>
    
    <id>{{ .Permalink }}</id>
    <content type="html">
      {{ .Content | html }}
    </content>
  </entry>
  {{ end }}
</feed>
